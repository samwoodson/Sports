<div class="jumbotron">
  <h1 class="text-center"><%= @sport.capitalize %></h1>
 <form class="merge_button" action="/posts/trending/<%= @sport %>" method="get">
  <button class="btn" name="trending" value="upvote">Trending</button>
 </form>

 <form class="merge_button" action="/posts/<%= @sport %>" method="get">
  <button class="btn" name="trending" value="upvote">All</button>
 </form>
<div class="container">
  <div class="row">
        <div class="span12">
            
            <form id="custom-search-form" class="form-search form-horizontal pull-right merge_button" action="/posts/search/<%= @sport %>" method="get">
                <div class="input-append span12">
                    <input name="terms" type="text" class="search-query mac-style" placeholder="Search">
                    <button type="submit" class="btn"><i class="icon-search"></i></button>
                </div>
            </form>

        </div>
  </div>
</div>

</div>

<div id="wrapper">
  <div id="columns">
    <% @posts.each do |post| %>
      <div class= "pin">
        <%if post.url%>
          <div class="well well-sm">
          <%= post.url %>
        <% else %>
          <div class="well">
            <h5><small><%= post.title %></small> <%= post.content %></h5 >
        <% end %>
        <% if @user && post.votes.pluck(:user_id).exclude?(@user.id) %>
            <button data-id="<%= post.id %>" type="button" name="foo" value="upvote" class="upvote_button glyphicon glyphicon-thumbs-up merge_button"></button>
        <% elsif @user %>
            <button data-id="<%= post.id %>" type="button" name="foodown" value="downvote" class="downvote_button glyphicon glyphicon-remove merge_button"></button>
        <% end %>
        <h5 class="text-center merge_button"><small>Votes:<span id="number_votes_<%= post.id %>"><%= post.votes.count %><span></small></h5>
      </div>
      </div>
    <% end %> 
  </div>
</div>
